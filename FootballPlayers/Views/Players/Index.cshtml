@{
}

@model List<Player>

<div class="page-description">
    <div class="page-description__title">
        Список футболистов
    </div>
    <div class="page-description__subtitle">
        Футболисты, внесенные в форму, отображаются здесь
    </div>
</div>
<div class="players-container">
    <table class="players-container__table" id="tableWithPlayers">
        <tr class="players-container__table-row">
            <th class="players-container__table-header">ID</th>
            <th class="players-container__table-header">Имя</th>
            <th class="players-container__table-header">Фамилия</th>
            <th class="players-container__table-header">Пол</th>
            <th class="players-container__table-header">Дата рождения</th>
            <th class="players-container__table-header">Команда</th>
            <th class="players-container__table-header">Страна</th>
            <th class="players-container__table-header">Действия</th>
        </tr>
        @foreach(var e in Model)
        {
            <tr class="players-container__table-row">
                <td class="players-container__table-data">@e.Id</td>
                <td class="players-container__table-data">@e.Name</td>
                <td class="players-container__table-data">@e.Surname</td>
                <td class="players-container__table-data">@e.Gender</td>
                <td class="players-container__table-data">@e.BirthDate.ToString("dd/MM/yyyy")</td>
                <td class="players-container__table-data">@e.Team</td>
                <td class="players-container__table-data">@e.Country</td>
                <td class="players-container__table-data">
                    <div>
                        <a asp-controller="Players" asp-action="Edit" asp-route-id=@e.Id>Редактировать</a>
                    </div>
                </td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr class="players-container__table-row" id="tdPlayersNotExists">
                <td colspan="8" class="players-container__table-data">В базе нет ни одного футболиста</td>
            </tr>
        }
    </table>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>